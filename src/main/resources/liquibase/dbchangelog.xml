        <createTable tableName="ideas">

            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="tags" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="varchar(8)">
                <constraints nullable="false"/>
            </column>
            <column name="header" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="main_picture" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="short_description" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="full_description" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="picture_list" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="rate" type="int">
                <constraints nullable="true"/>
        </column>

        </createTable>

    </changeSet>

